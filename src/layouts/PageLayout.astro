---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import MobileMenu from '~/components/widgets/MobileMenu.astro';

import {
  headerDataEn,
  headerDataKo,
  footerDataEn,
  footerDataKo,
  getLanguageFromPath
} from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  locale?: 'en' | 'ko';
}

const { metadata, locale } = Astro.props;

// Detect language from URL
const detectedLang = getLanguageFromPath(Astro.url.pathname);
const currentLang = locale === 'en' || locale === 'ko' ? locale : detectedLang;
const headerData = currentLang === 'ko' ? headerDataKo : headerDataEn;
const footerData = currentLang === 'ko' ? footerDataKo : footerDataEn;
---

<Layout metadata={metadata} locale={currentLang}>
  <Fragment slot="head">
    <slot name="head" />
  </Fragment>
  <slot name="header">
    <Header {...headerData} isSticky showToggleTheme locale={currentLang} />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
    <MobileMenu locale={currentLang} />
  </slot>
</Layout>
