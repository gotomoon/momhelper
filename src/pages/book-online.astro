---
import PageLayout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Contact from '~/components/widgets/Contact.astro';
import Content from '~/components/widgets/Content.astro';
import Note from '~/components/widgets/Note.astro';

const metadata = {
  title: 'Book Online â€” Mom Helper USA',
  description: 'Book postpartum care services. Reserve personalized care with our easy online booking.',
};
---

<PageLayout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    tagline="Book Service"
    title="Book Postpartum Care Services"
    subtitle="Complete the form below to reserve personalized postpartum care services"
  />

  <!-- Important Notice -->
  <Note
    title="Before You Apply"
    content="We recommend booking at least 1-2 months before your due date. For peak season (September-December), please book even earlier."
  />

  <!-- Pre-Application Information -->
  <Content
    title="Application Process"
    subtitle="Step-by-step guide for seamless service"
    items={[
      {
        title: 'Step 1: Online Application',
        description: 'Complete and submit the application form below',
      },
      {
        title: 'Step 2: Consultation Call',
        description: 'Our team will contact you within 24 hours for detailed consultation',
      },
      {
        title: 'Step 3: Schedule Confirmation',
        description: 'We will match you with a caregiver and confirm your service dates',
      },
      {
        title: 'Step 4: Deposit Payment',
        description: 'Your booking is confirmed once the deposit is paid',
      },
      {
        title: 'Step 5: Service Begins',
        description: 'Professional caregiver arrives on scheduled date to begin service',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Application Form -->
  <Contact
    id="application-form"
    title="Service Application Form"
    subtitle="Please complete all fields accurately"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Mother\'s Full Name *',
        placeholder: 'Jane Doe',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone Number *',
        placeholder: '(213) 123-4567',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email Address *',
        placeholder: 'your@email.com',
      },
      {
        type: 'text',
        name: 'address',
        label: 'Service Address (City/County) *',
        placeholder: 'Los Angeles, CA',
      },
      {
        type: 'date',
        name: 'due_date',
        label: 'Due Date *',
        placeholder: '',
      },
      {
        type: 'text',
        name: 'service_type',
        label: 'Service Type *',
        placeholder: 'Commuting or Live-in',
      },
      {
        type: 'text',
        name: 'service_duration',
        label: 'Desired Service Duration *',
        placeholder: 'e.g., 4 weeks',
      },
      {
        type: 'text',
        name: 'family_size',
        label: 'Family Composition',
        placeholder: 'e.g., Mother, spouse, newborn',
      },
    ]}
    textarea={{
      label: 'Additional Requests',
      name: 'additional_notes',
      placeholder: 'Please enter any special considerations or questions...',
      rows: 5,
    }}
    disclaimer={{
      label: 'I agree to the collection and use of personal information. The information provided will only be used for service delivery purposes.',
    }}
    description="After submitting your application, our team will contact you within 24 hours."
    button="Submit Application"
    formName="service-application"
  />

  <!-- Required Documents -->
  <Content
    title="Required Documents"
    subtitle="Documents needed before service begins"
    isReversed
    items={[
      {
        title: 'Identification',
        description: 'Copy of mother or guardian\'s ID (driver\'s license or passport)',
      },
      {
        title: 'Birth-Related Documents',
        description: 'Due date confirmation or birth certificate',
      },
      {
        title: 'Address Verification',
        description: 'Document confirming service location address (utility bill, etc.)',
      },
      {
        title: 'Service Contract',
        description: 'Service agreement (provided upon booking confirmation)',
      },
    ]}
  />

  <!-- Service Policies -->
  <Content
    title="Service Terms & Conditions"
    subtitle="Please read carefully"
  >
    <Fragment slot="content">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <h3 class="text-xl font-bold mb-4">Booking & Cancellation Policy</h3>
        <ul class="space-y-3 mb-6">
          <li><strong>Deposit:</strong> Deposits of $300-$1,100 required based on service duration</li>
          <li><strong>Booking Changes:</strong> Free changes available up to 7 days before service start</li>
          <li><strong>Cancellation:</strong> 50% deposit refund for cancellations 7+ days before service start</li>
          <li><strong>No-Show:</strong> No deposit refund for failure to use service without prior notice</li>
        </ul>

        <h3 class="text-xl font-bold mb-4">Payment Methods</h3>
        <ul class="space-y-3 mb-6">
          <li>Check</li>
          <li>Zelle</li>
          <li>Cash</li>
          <li>Wire Transfer</li>
        </ul>

        <h3 class="text-xl font-bold mb-4">Service Hours</h3>
        <ul class="space-y-3 mb-6">
          <li><strong>Commuting Care:</strong> 9am - 5pm (Monday-Friday)</li>
          <li><strong>Live-in Care:</strong> 24-hour care (Monday-Friday, weekends by arrangement)</li>
          <li><strong>Overtime:</strong> Additional fees apply for services beyond scheduled hours</li>
        </ul>

        <h3 class="text-xl font-bold mb-4">Other Important Notes</h3>
        <ul class="space-y-3">
          <li>Caregivers are not medical professionals and do not provide medical services</li>
          <li>In case of emergency, immediately call 911 and notify the guardian</li>
          <li>Responsibility for property damage during service will be discussed case by case</li>
          <li>Please inform us in advance if you have pets for caregiver safety</li>
        </ul>
      </div>
    </Fragment>
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Contact Information -->
  <section class="px-4 py-16 mx-auto max-w-4xl text-center">
    <h2 class="text-3xl font-bold mb-6">Have Questions?</h2>
    <p class="text-xl text-muted mb-8">
      If you have any questions before applying, please contact us anytime
    </p>
    <div class="grid md:grid-cols-3 gap-6 max-w-3xl mx-auto">
      <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md">
        <div class="text-primary mb-3">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        </div>
        <h3 class="font-bold mb-2">Phone</h3>
        <a href="tel:+12138084415" class="text-primary hover:underline">(213) 808-4415</a>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md">
        <div class="text-primary mb-3">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="font-bold mb-2">Email</h3>
        <a href="mailto:momhelperusa10@gmail.com" class="text-primary hover:underline break-all">momhelperusa10@gmail.com</a>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md">
        <div class="text-primary mb-3">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <h3 class="font-bold mb-2">KakaoTalk</h3>
        <span class="text-primary font-semibold">momhelper.usa</span>
      </div>
    </div>
  </section>
</PageLayout>
