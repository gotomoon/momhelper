---
import PageLayout from '~/layouts/PageLayout.astro';
import WPPageHero from '~/components/wordpress/WPPageHero.astro';

const metadata = {
  title: '기타 서비스 신청하기',
  description: '베이비시터/내니, 가사도움, 간병인 서비스 신청. 간편한 온라인 신청으로 맞춤형 케어를 예약하세요.',
};

const web3FormsAccessKey = import.meta.env.PUBLIC_WEB3FORMS_ACCESS_KEY || 'YOUR_WEB3FORMS_ACCESS_KEY';
const siteUrl = (Astro.site ? String(Astro.site) : 'https://momhelperusa.com').replace(/\/$/, '');
const redirectUrl = `${siteUrl}/ko/기타-서비스-신청하기?success=true`;
---

<PageLayout metadata={metadata}>
  <!-- Hero Section -->
  <WPPageHero title="기타 서비스 신청하기" />

  <!-- Form Section -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-xl md:text-2xl font-bold mb-6 text-gray-800">기타 서비스 예약폼</h2>

      <div class="mb-8">
        <h4 class="text-lg font-semibold text-[#d37643] mb-4">기타 서비스 예약폼을 작성해 주세요</h4>
        <p class="text-gray-700">원하시는 서비스와 세부사항을 선택해 주시거나 안내 주시면 감사하겠습니다.</p>
      </div>

      <form id="application_form" class="space-y-6" action="https://api.web3forms.com/submit" method="POST">
        <!-- Web3Forms Hidden Fields -->
        <input type="hidden" name="access_key" value={web3FormsAccessKey} />
        <input type="hidden" name="redirect" value={redirectUrl} />
        <input type="hidden" name="subject" value="New Other Services Booking Request (KO) from Mom Helper USA" />
        <input type="hidden" name="from_name" value="Mom Helper USA Website" />
        <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />

        <!-- Name and Email -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">이름 *</label>
            <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="이름">
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">이메일 *</label>
            <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="이메일">
          </div>
        </div>

        <!-- Phone -->
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">휴대 전화 번호 *</label>
          <input type="tel" id="phone" name="phone" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="휴대 전화 번호">
        </div>

        <!-- Address -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="street" class="block text-sm font-medium text-gray-700 mb-2">서비스 받으실 주소: Street *</label>
            <input type="text" id="street" name="street" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Street">
          </div>
          <div>
            <label for="city" class="block text-sm font-medium text-gray-700 mb-2">City *</label>
            <input type="text" id="city" name="city" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="City">
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="state" class="block text-sm font-medium text-gray-700 mb-2">State *</label>
            <input type="text" id="state" name="state" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="State">
          </div>
          <div>
            <label for="zip" class="block text-sm font-medium text-gray-700 mb-2">Zip code *</label>
            <input type="text" id="zip" name="zip" required pattern="[0-9\\s\\-]{5,}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Zip code">
          </div>
        </div>

        <!-- Service Type Selection -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">서비스 유형 *</label>
          <div class="space-y-2">
            <label class="flex items-center"><input type="radio" name="service_type" value="베이비시터/내니" required class="mr-2 text-[#d37643]"> 베이비시터/내니</label>
            <label class="flex items-center"><input type="radio" name="service_type" value="가사 도움" class="mr-2 text-[#d37643]"> 가사 도움</label>
            <label class="flex items-center"><input type="radio" name="service_type" value="간병인" class="mr-2 text-[#d37643]"> 간병인</label>
            <label class="flex items-center"><input type="radio" name="service_type" value="기타" class="mr-2 text-[#d37643]"> 기타</label>
          </div>
        </div>

        <!-- Work Type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">근무형태 *</label>
          <div class="space-y-2">
            <label class="flex items-center"><input type="radio" name="work_type" value="출퇴근" required class="mr-2 text-[#d37643]"> 출퇴근</label>
            <label class="flex items-center"><input type="radio" name="work_type" value="입주형" class="mr-2 text-[#d37643]"> 입주형</label>
            <label class="flex items-center"><input type="radio" name="work_type" value="시간제" class="mr-2 text-[#d37643]"> 시간제</label>
          </div>
        </div>

        <!-- Service Start Date -->
        <div>
          <label for="start_date" class="block text-sm font-medium text-gray-700 mb-2">서비스 시작 희망일 (월/날자/년도)</label>
          <input type="text" id="start_date" name="start_date" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="서비스 시작 희망일">
        </div>

        <!-- Service Duration -->
        <div>
          <label for="service_duration" class="block text-sm font-medium text-gray-700 mb-2">서비스 기간</label>
          <input type="text" id="service_duration" name="service_duration" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="예: 3개월, 6개월, 장기 등">
        </div>

        <!-- Additional Information -->
        <div>
          <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">기타 참고 사항</label>
          <textarea id="notes" name="notes" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="서비스에 대한 구체적인 요구사항이나 질문사항을 적어주세요."></textarea>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="bg-[#d37643] text-white font-bold px-8 py-3 rounded-lg hover:bg-[#b8551f] transition-colors">
            제출하기
          </button>
        </div>
      </form>
    </div>
  </section>

  <!-- Important Notes Section -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-xl md:text-2xl font-bold mb-6 text-gray-800">기타 서비스 신청 안내</h2>
      <ul class="list-disc list-inside space-y-3 text-gray-700">
        <li>서비스 요금은 서비스 유형과 근무형태에 따라 달라질 수 있습니다.</li>
        <li>상담 후 구체적인 서비스 내용과 요금이 확정됩니다.</li>
        <li>신청서 제출 후 담당자가 빠른 시일 내에 연락드리겠습니다.</li>
      </ul>
    </div>
  </section>
</PageLayout>
