---
import PageLayout from '~/layouts/PageLayout.astro';
import WPPageHero from '~/components/wordpress/WPPageHero.astro';

const metadata = {
  title: 'Book Online',
  description: 'Book postpartum care services. Schedule your customized care with our easy online booking form.',
};

const web3FormsAccessKey = import.meta.env.PUBLIC_WEB3FORMS_ACCESS_KEY || 'YOUR_WEB3FORMS_ACCESS_KEY';
const siteUrl = (Astro.site ? String(Astro.site) : 'https://momhelperusa.com').replace(/\/$/, '');
const redirectUrl = `${siteUrl}/en/book-online?success=true`;
---

<PageLayout metadata={metadata}>
  <!-- Hero Section -->
  <WPPageHero title="Book Online" />

  <!-- Form Section -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-xl md:text-2xl font-bold mb-6 text-gray-800">Postpartum Care Booking Form</h2>

      <div class="mb-8">
        <h4 class="text-lg font-semibold text-[#d37643] mb-4">Please fill out the postpartum care booking form</h4>
        <p class="text-gray-700">Please select or provide your preferences for postpartum care services.</p>
      </div>

      <form id="application_form" class="space-y-6" action="https://api.web3forms.com/submit" method="POST">
        <!-- Web3Forms Hidden Fields -->
        <input type="hidden" name="access_key" value={web3FormsAccessKey} />
        <input type="hidden" name="redirect" value={redirectUrl} />
        <input type="hidden" name="subject" value="New Postpartum Care Booking Form Submission from Mom Helper USA" />
        <input type="hidden" name="from_name" value="Mom Helper USA Website" />
        <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />

        <!-- Name and Email -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
            <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Name">
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
            <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Email">
          </div>
        </div>

        <!-- Phone -->
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number *</label>
          <input type="tel" id="phone" name="phone" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Phone Number">
        </div>

        <!-- Address -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="street" class="block text-sm font-medium text-gray-700 mb-2">Service Address: Street *</label>
            <input type="text" id="street" name="street" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Street">
          </div>
          <div>
            <label for="city" class="block text-sm font-medium text-gray-700 mb-2">City *</label>
            <input type="text" id="city" name="city" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="City">
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="state" class="block text-sm font-medium text-gray-700 mb-2">State *</label>
            <input type="text" id="state" name="state" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="State">
          </div>
          <div>
            <label for="zip" class="block text-sm font-medium text-gray-700 mb-2">Zip Code *</label>
            <input type="text" id="zip" name="zip" required pattern="[0-9\s\-]{5,}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Zip Code">
          </div>
        </div>

        <!-- Due Date -->
        <div>
          <label for="due_date" class="block text-sm font-medium text-gray-700 mb-2">Due Date (MM/DD/YYYY)</label>
          <input type="text" id="due_date" name="due_date" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Due Date">
        </div>

        <!-- Birth Type and Service Type -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">Birth Type</label>
            <div class="space-y-2">
              <label class="flex items-center"><input type="radio" name="birth_type" value="Natural Birth" class="mr-2 text-[#d37643]"> Natural Birth</label>
              <label class="flex items-center"><input type="radio" name="birth_type" value="C-Section" class="mr-2 text-[#d37643]"> C-Section</label>
              <label class="flex items-center"><input type="radio" name="birth_type" value="Undecided" class="mr-2 text-[#d37643]"> Undecided</label>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">Service Type</label>
            <div class="space-y-2">
              <label class="flex items-center"><input type="radio" name="service_type" value="Commute" class="mr-2 text-[#d37643]"> Commute</label>
              <label class="flex items-center"><input type="radio" name="service_type" value="Live-In" class="mr-2 text-[#d37643]"> Live-In</label>
              <label class="flex items-center"><input type="radio" name="service_type" value="Mixed" class="mr-2 text-[#d37643]"> Mixed</label>
            </div>
          </div>
        </div>

        <!-- Service Duration -->
        <div>
          <label for="service_duration" class="block text-sm font-medium text-gray-700 mb-2">Service Duration *</label>
          <input type="text" id="service_duration" name="service_duration" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Number of weeks (1 week = 5 days) or months">
        </div>

        <!-- Duration Details -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label for="commute_duration" class="block text-sm font-medium text-gray-700 mb-2">Commute (weeks or months)</label>
            <input type="text" id="commute_duration" name="commute_duration" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Commute">
          </div>
          <div>
            <label for="livein_duration" class="block text-sm font-medium text-gray-700 mb-2">Live-In (weeks or months)</label>
            <input type="text" id="livein_duration" name="livein_duration" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Live-In">
          </div>
          <div>
            <label for="mixed_duration" class="block text-sm font-medium text-gray-700 mb-2">Mixed (weeks or months)</label>
            <input type="text" id="mixed_duration" name="mixed_duration" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Mixed">
          </div>
        </div>

        <!-- Older Children and Twins -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">Older Children</label>
            <div class="space-y-2">
              <label class="flex items-center"><input type="radio" name="older_children" value="First Child" class="mr-2 text-[#d37643]"> First Child</label>
              <label class="flex items-center"><input type="radio" name="older_children" value="1" class="mr-2 text-[#d37643]"> 1</label>
              <label class="flex items-center"><input type="radio" name="older_children" value="2" class="mr-2 text-[#d37643]"> 2</label>
              <label class="flex items-center"><input type="radio" name="older_children" value="3 or more" class="mr-2 text-[#d37643]"> 3 or more</label>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">Twins</label>
            <div class="space-y-2">
              <label class="flex items-center"><input type="radio" name="twins" value="Yes" class="mr-2 text-[#d37643]"> Yes</label>
              <label class="flex items-center"><input type="radio" name="twins" value="No" class="mr-2 text-[#d37643]"> No</label>
            </div>
          </div>
        </div>

        <!-- Additional Notes -->
        <div>
          <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">Additional Notes</label>
          <textarea id="notes" name="notes" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent" placeholder="Additional Notes"></textarea>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="bg-[#d37643] text-white font-bold px-8 py-3 rounded-lg hover:bg-[#b8551f] transition-colors">
            Submit
          </button>
        </div>
      </form>
    </div>
  </section>

  <!-- Important Notes Section -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-xl md:text-2xl font-bold mb-6 text-gray-800">Postpartum Care Service Booking</h2>
      <ul class="list-disc list-inside space-y-3 text-gray-700">
        <li>For mixed service (commute + live-in), the live-in deposit rate applies.</li>
        <li>Extensions may not be available depending on the schedule of other mothers.</li>
        <li>Service fees are paid directly to the caregiver on a weekly basis after service begins.</li>
      </ul>
    </div>
  </section>
</PageLayout>
