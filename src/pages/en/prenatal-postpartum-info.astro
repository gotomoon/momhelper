---
import Layout from '~/layouts/PageLayout.astro';
import WPPageHero from '~/components/wordpress/WPPageHero.astro';
import BlogList from '~/components/blog/List.astro';
import { fetchPosts } from '~/utils/blog';

const metadata = {
  title: 'Prenatal & Postpartum Care Information',
  description: 'Helpful information about prenatal and postpartum care, pregnancy symptoms, finding doctors, and support programs in the USA.',
};

// Fetch posts from the Prenatal Care category
const posts = await fetchPosts();
const prenatalPosts = posts.filter(post =>
  post.category?.slug === 'prenatal-care' ||
  post.category?.title === 'Prenatal Care'
);
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <WPPageHero title="Prenatal & Postpartum Care Information" />

  <!-- Blog Posts Section -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-2xl md:text-3xl font-bold mb-12 text-center text-gray-800">Prenatal & Postpartum Care Information</h2>

      <!-- Category Tabs -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <span class="px-4 py-2 bg-[#d37643] text-white rounded-full text-sm font-medium">Reviews and Recommendations</span>
        <span class="px-4 py-2 bg-[#d37643] text-white rounded-full text-sm font-medium">Prenatal Care</span>
        <span class="px-4 py-2 bg-[#d37643] text-white rounded-full text-sm font-medium">Preparing for Childbirth</span>
      </div>

      <!-- Recent Posts -->
      <div class="mb-12">
        <h3 class="text-xl font-bold text-gray-800 mb-6">Recent Posts</h3>
        {prenatalPosts.length > 0 ? (
          <BlogList posts={prenatalPosts} />
        ) : (
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Post Card 1 -->
            <a href="/early-pregnancy-symptoms" class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-3 hover:text-[#d37643]">
                  Early Pregnancy Symptoms: Essential Guide for a Happy Start and How to Manage Them in the USA
                </h4>
                <p class="text-gray-600 text-sm mb-4">
                  Hello, dear expecting mothers! Today, let's talk about early pregnancy symptoms. The early stages of pregnancy are a joyful and mysterious time, but they are also a period of many changes...
                </p>
                <span class="text-[#d37643] text-sm font-medium">Read more →</span>
              </div>
            </a>

            <!-- Post Card 2 -->
            <a href="/finding-good-obstetrician" class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-3 hover:text-[#d37643]">
                  Early Pregnancy: Finding a Good Obstetrician and Maternity Support Programs
                </h4>
                <p class="text-gray-600 text-sm mb-4">
                  Finding a Good Doctor and Hospital: In the United States, you can easily find reputable doctors and hospitals through websites like Healthgrades and Zocdoc...
                </p>
                <span class="text-[#d37643] text-sm font-medium">Read more →</span>
              </div>
            </a>
          </div>
        )}
      </div>
    </div>
  </section>
</Layout>
