---
import { Image } from 'astro:assets';
import logoLight from '~/assets/images/momhelper/logos/logo.webp';
import logoDark from '~/assets/images/momhelper/logos/logo-white.webp';
---

<div class="flex items-center">
  <!-- Logo for light mode (matches WordPress 92% of header height = ~75px) -->
  <Image
    src={logoLight}
    alt="Mom Helper USA"
    class="h-[75px] w-auto max-h-[92%] dark:hidden transition-all duration-300"
    loading="eager"
    width={150}
    height={150}
  />
  <!-- Logo for dark mode -->
  <Image
    src={logoDark}
    alt="Mom Helper USA"
    class="h-[75px] w-auto max-h-[92%] hidden dark:block transition-all duration-300"
    loading="eager"
    width={150}
    height={150}
  />
</div>
