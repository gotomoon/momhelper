---
import { Image } from 'astro:assets';
import logoLight from '~/assets/images/momhelper/logos/logo.webp';
import logoDark from '~/assets/images/momhelper/logos/logo-white.webp';
---

<div class="flex items-center">
  <!-- Logo for light mode (enlarged to 100px) -->
  <Image
    src={logoLight}
    alt="Mom Helper USA"
    class="h-[100px] w-auto dark:hidden transition-all duration-300"
    loading="eager"
    width={200}
    height={200}
  />
  <!-- Logo for dark mode -->
  <Image
    src={logoDark}
    alt="Mom Helper USA"
    class="h-[100px] w-auto hidden dark:block transition-all duration-300"
    loading="eager"
    width={200}
    height={200}
  />
</div>
