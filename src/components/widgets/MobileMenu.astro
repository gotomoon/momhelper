---
import { getLanguageFromPath, headerDataEn, headerDataKo } from '~/navigation';

// Detect language from URL
const currentLang = getLanguageFromPath(Astro.url.pathname);
const headerData = currentLang === 'ko' ? headerDataKo : headerDataEn;
const { links = [] } = headerData;

// Language switcher configuration
const locales = [
  { code: 'en', label: 'English' },
  { code: 'ko', label: '한국어' },
];

// Filter out language dropdown from links
const filteredLinks = links.filter(link => link.text !== 'Language' && link.text !== '언어 (Language)');
---

<!-- Mobile Menu Overlay -->
<div id="mobile-menu-overlay" class="fixed inset-0 bg-black/50 z-40 hidden md:hidden"></div>

<!-- Mobile Menu Drawer -->
<div 
  id="mobile-menu-drawer" 
  class="fixed top-0 right-0 bottom-0 w-[280px] bg-white dark:bg-gray-900 z-50 md:hidden transform translate-x-full transition-transform duration-300 ease-in-out shadow-2xl"
>
  <!-- Menu Header -->
  <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700">
    <h2 class="text-lg font-bold text-gray-900 dark:text-white">
      {currentLang === 'ko' ? '메뉴' : 'Menu'}
    </h2>
    <button
      id="close-mobile-menu"
      type="button"
      class="p-2 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
      aria-label="Close menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Menu Content -->
  <nav class="overflow-y-auto h-[calc(100vh-73px)]">
    <ul class="py-2">
      {filteredLinks.map(({ text, href, links: subLinks }) => (
        <li>
          {subLinks?.length ? (
            <!-- Menu item with submenu -->
            <div>
              <button
                class="w-full flex items-center justify-between px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors mobile-submenu-toggle"
                type="button"
              >
                <span class="font-medium">{text}</span>
                <svg class="w-5 h-5 transition-transform mobile-submenu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
              <!-- Submenu -->
              <ul class="hidden bg-gray-50 dark:bg-gray-800/50 mobile-submenu">
                {subLinks.map(({ text: subText, href: subHref }) => (
                  <li>
                    <a
                      href={subHref}
                      class="block px-8 py-2.5 text-sm text-gray-600 dark:text-gray-400 hover:text-primary hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
                    >
                      {subText}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ) : (
            <!-- Simple menu item -->
            <a
              href={href}
              class="block px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors font-medium"
            >
              {text}
            </a>
          )}
        </li>
      ))}
    </ul>

    <!-- Language Switcher (Mobile) -->
    <div class="px-4 py-4 border-t border-gray-200 dark:border-gray-700">
      <div class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">
        {currentLang === 'ko' ? '언어' : 'Language'}
      </div>
      <div class="flex gap-2">
        {
          locales.map((locale) => {
            const href = locale.code === 'ko' ? '/ko' : '/en';
            const isActive = locale.code === currentLang;
            return (
              <a
                href={href}
                class:list={[
                  'px-4 py-2 rounded text-sm font-semibold transition-colors flex-1 text-center',
                  isActive
                    ? 'text-white bg-[#b74000] border border-[#b74000]'
                    : 'text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800',
                ]}
                aria-label={locale.label}
                data-lang-switch={locale.code}
              >
                {locale.label}
              </a>
            );
          })
        }
      </div>
    </div>
  </nav>
</div>

<script is:inline>
  // Initialize mobile menu functionality
  window.initMobileMenu = function() {
    const mobileMenuToggle = document.querySelector('.mobile_menu_bar_toggle');
    const mobileMenuDrawer = document.getElementById('mobile-menu-drawer');
    const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
    const closeMobileMenu = document.getElementById('close-mobile-menu');

    if (!mobileMenuDrawer || !mobileMenuOverlay) {
      console.warn('Mobile menu elements not found');
      return;
    }

    function openMobileMenu() {
      mobileMenuDrawer.classList.remove('translate-x-full');
      mobileMenuOverlay.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeMobileMenuFunc() {
      mobileMenuDrawer.classList.add('translate-x-full');
      mobileMenuOverlay.classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Open menu when hamburger is clicked
    if (mobileMenuToggle) {
      mobileMenuToggle.removeEventListener('click', openMobileMenu);
      mobileMenuToggle.addEventListener('click', openMobileMenu);
    }

    // Close menu when X button is clicked
    if (closeMobileMenu) {
      closeMobileMenu.removeEventListener('click', closeMobileMenuFunc);
      closeMobileMenu.addEventListener('click', closeMobileMenuFunc);
    }

    // Close menu when overlay is clicked
    if (mobileMenuOverlay) {
      mobileMenuOverlay.removeEventListener('click', closeMobileMenuFunc);
      mobileMenuOverlay.addEventListener('click', closeMobileMenuFunc);
    }

    // Close menu when ESC is pressed
    function handleEscKey(e) {
      if (e.key === 'Escape') {
        closeMobileMenuFunc();
      }
    }
    document.removeEventListener('keydown', handleEscKey);
    document.addEventListener('keydown', handleEscKey);

    // Handle submenu toggles
    const submenuToggles = document.querySelectorAll('.mobile-submenu-toggle');
    submenuToggles.forEach(toggle => {
      toggle.removeEventListener('click', handleSubmenuToggle);
      toggle.addEventListener('click', handleSubmenuToggle);
    });

    function handleSubmenuToggle(e) {
      e.stopPropagation();
      const parent = this.parentElement;
      const submenu = parent.querySelector('.mobile-submenu');
      const icon = this.querySelector('.mobile-submenu-icon');

      if (submenu) {
        submenu.classList.toggle('hidden');
        icon.classList.toggle('rotate-90');
      }
    }

    // Close menu when clicking a link
    const menuLinks = mobileMenuDrawer.querySelectorAll('a');
    menuLinks.forEach(link => {
      link.removeEventListener('click', closeMobileMenuFunc);
      link.addEventListener('click', closeMobileMenuFunc);
    });

    console.log('Mobile menu initialized');
  };

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', function() {
    window.initMobileMenu();
  });

  // Reinitialize after Astro page transitions
  document.addEventListener('astro:page-load', function() {
    window.initMobileMenu();
  });

  document.addEventListener('astro:after-swap', function() {
    window.initMobileMenu();
  });
</script>

<style>
  /* Ensure smooth transitions */
  #mobile-menu-drawer {
    will-change: transform;
  }

  .mobile-submenu-icon {
    will-change: transform;
  }

  .rotate-90 {
    transform: rotate(90deg);
  }
</style>
