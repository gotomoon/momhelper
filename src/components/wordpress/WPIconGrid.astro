---
interface IconCard {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  cards: IconCard[];
  columns?: number;
  backgroundColor?: string;
  cardBackgroundColor?: string;
}

const {
  title,
  subtitle,
  cards,
  columns = 3,
  backgroundColor = 'white',
  cardBackgroundColor = '#fff7f4',
} = Astro.props;

const gridCols = columns === 2 ? 'md:grid-cols-2' : 'md:grid-cols-3';
---

<section class="et_pb_section py-16" style={`background-color: ${backgroundColor};`}>
  <div class="container mx-auto max-w-[1080px] px-4">
    {(title || subtitle) && (
      <div class="et_pb_row mb-8">
        {title && (
          <h2 class="text-[#B8551F] font-['Noto_Sans_KR'] text-2xl md:text-3xl font-bold text-center mb-6">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-center text-gray-600 text-sm">
            {subtitle}
          </p>
        )}
      </div>
    )}

    <div class={`grid grid-cols-1 ${gridCols} gap-6`}>
      {cards.map((card) => (
        <div class="rounded-lg p-6 text-center" style={`background-color: ${cardBackgroundColor};`}>
          <h4 class="font-bold text-[#D37643] text-lg mb-3">{card.title}</h4>
          <p class="text-gray-700 text-sm">{card.description}</p>
        </div>
      ))}
    </div>

    <!-- Slot for additional content -->
    <slot />
  </div>
</section>

<style>
  .et_pb_section {
    font-family: 'Noto Sans KR', 'Open Sans', sans-serif;
  }
</style>
