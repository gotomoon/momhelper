---
import { getPermalink } from '~/utils/permalinks';
import { fetchPosts } from '~/utils/blog';

const posts = await fetchPosts();
const recentPosts = posts.slice(0, 5);

const categories = new Set();
const tags = new Set();

posts.forEach((post) => {
  if (post.category) {
    categories.add(post.category.title);
  }
  if (post.tags) {
    post.tags.forEach((tag) => tags.add(tag.title));
  }
});
---

<aside class="lg:w-1/3 lg:pl-8 mt-12 lg:mt-0">
  <div class="sticky top-24 space-y-8">
    <!-- Search Widget (Placeholder) -->
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-100">
      <h3 class="text-lg font-bold mb-4 text-gray-800 border-b pb-2">검색</h3>
      <form action="/search" method="get" class="relative">
        <input
          type="text"
          name="q"
          placeholder="검색어를 입력하세요..."
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#d37643] focus:border-transparent outline-none transition-all"
        />
        <button type="submit" class="absolute right-3 top-2.5 text-gray-400 hover:text-[#d37643]">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
      </form>
    </div>

    <!-- Categories Widget -->
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-100">
      <h3 class="text-lg font-bold mb-4 text-gray-800 border-b pb-2">카테고리</h3>
      <ul class="space-y-2">
        {
          Array.from(categories).map((category) => (
            <li>
              <a
                href={getPermalink(category as string, 'category')}
                class="flex justify-between items-center text-gray-600 hover:text-[#d37643] transition-colors group"
              >
                <span>{category}</span>
                <span class="bg-gray-100 text-gray-500 text-xs px-2 py-1 rounded-full group-hover:bg-[#d37643] group-hover:text-white transition-colors">
                  {posts.filter((p) => p.category?.title === category).length}
                </span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Recent Posts Widget -->
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-100">
      <h3 class="text-lg font-bold mb-4 text-gray-800 border-b pb-2">최근 게시글</h3>
      <ul class="space-y-4">
        {
          recentPosts.map((post) => (
            <li>
              <a href={getPermalink(post.permalink, 'post')} class="group flex gap-3">
                <div class="flex-1">
                  <h4 class="text-sm font-medium text-gray-800 group-hover:text-[#d37643] line-clamp-2 transition-colors">
                    {post.title}
                  </h4>
                  <p class="text-xs text-gray-500 mt-1">{post.publishDate.toLocaleDateString('ko-KR')}</p>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Tags Widget -->
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-100">
      <h3 class="text-lg font-bold mb-4 text-gray-800 border-b pb-2">태그</h3>
      <div class="flex flex-wrap gap-2">
        {
          Array.from(tags).map((tag) => (
            <a
              href={getPermalink(tag as string, 'tag')}
              class="text-xs px-3 py-1.5 bg-gray-100 text-gray-600 rounded-full hover:bg-[#d37643] hover:text-white transition-colors"
            >
              #{tag}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</aside>
