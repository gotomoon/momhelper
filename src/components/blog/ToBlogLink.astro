---
import { Icon } from 'astro-icon/components';
import { I18N } from 'astrowind:config';
import Button from '~/components/ui/Button.astro';
import { getLocaleFromPath, getPathForRoute } from '~/utils/i18nRoutes';
import { getBlogPermalink } from '~/utils/permalinks';

export interface Props {
  locale?: 'en' | 'ko';
}

const { textDirection } = I18N;
const { locale: propLocale } = Astro.props as Props;
const locale = propLocale === 'en' || propLocale === 'ko' ? propLocale : getLocaleFromPath(Astro.url.pathname || '/');
const blogPath = getPathForRoute('blog', locale) ?? getBlogPermalink();
---

<div class="mx-auto px-6 sm:px-6 max-w-3xl pt-8 md:pt-4 pb-12 md:pb-20">
  <Button variant="tertiary" class="px-3 md:px-3" href={blogPath}>
    {
      textDirection === 'rtl' ? (
        <Icon name="tabler:chevron-right" class="w-5 h-5 mr-1 -ml-1.5 rtl:-mr-1.5 rtl:ml-1" />
      ) : (
        <Icon name="tabler:chevron-left" class="w-5 h-5 mr-1 -ml-1.5 rtl:-mr-1.5 rtl:ml-1" />
      )
    } Back to Blog
  </Button>
</div>
